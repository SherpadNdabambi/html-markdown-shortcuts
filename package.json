{
  "name": "html-markdown-shortcuts",
  "displayName": "HTML & Markdown Shortcuts",
  "description": " Save time while writing HTML and Markdown with useful shortcuts.",
  "icon": "img/html-markdown-shortcuts-logo.png",
  "version": "2.0.3",
  "categories": [
    "Formatters",
    "Keymaps",
    "Programming Languages"
  ],
  "publisher": "SherpadNdabambi",
  "repository": {
    "type": "git",
    "url": "https://github.com/SherpadNdabambi/html-markdown-shortcuts.git"
  },
  "contributes": {
    "commands": [
      {
        "command": "html-markdown-shortcuts.changeCase",
        "title": "Change Case",
        "when": true
      },
      {
        "command": "html-markdown-shortcuts.toggleStag",
        "title": "Toggle s tag",
        "when": false
      },
      {
        "command": "html-markdown-shortcuts.toggleStrikethrough",
        "title": "Toggle Strikethrough"
      },
      {
        "command": "html-markdown-shortcuts.toggleTildeWrap",
        "title": "Toggle tilde wrap",
        "when": false
      }
    ],
    "keybindings": [
      {
        "command": "html-markdown-shortcuts.changeCase",
        "key": "capslock"
      },
      {
        "command": "html-markdown-shortcuts.toggleStag",
        "key": "shift+`",
        "when": "editorLangId === 'html'"
      },
      {
        "command": "html-markdown-shortcuts.toggleTildeWrap",
        "key": "shift+`",
        "when": "editorLangId === 'markdown'"
      }
    ]
  },
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.78.0"
  },
  "activationEvents": [],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
